	<artifactId>FilesToFilesXSLT2Transformer</artifactId>

	<!-- TODO 2: specify module version, can be left unchanged -->
	<version>1.2.1</version>

	<packaging>bundle</packaging>

	<description>FilesToFilesXSLT2Transformer does XSLT over Files and outputs Files.</description>

	<properties>
		<dpu.package>cz.cuni.mff.xrg.odcs.dpu.filestofilesxslt2transformer</dpu.package>
		<dpu.mainClass>FilesToFilesXSLT2Transformer</dpu.mainClass>
		<!-- TODO 6: Put path to the ODCL DPUs directory here -->
		<!-- this is required in order to use 'copy-to-odcl' and 'publish-to-odcl' 
			profiles -->
		<dpu.odcl.dir></dpu.odcl.dir>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>net.sf.saxon</groupId>
			<artifactId>Saxon-HE</artifactId>
			<version>9.4</version>
			<!--<version>9.4.0-9</version>-->
			<!--<version>9.5.1-5</version>-->
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>xml-resolver</groupId>
			<artifactId>xml-resolver</artifactId>
			<version>1.2</version>
		</dependency>
		<!-- TODO 7: add dependencies here -->

		<!-- Sample dependency defining a maven artifact - Saxon JAR - available 
			on Maven repositories. If you have configured on your machine access to any 
			maven repository, the following lines should work for you and should automatically 
			make SAXON HE 9.2.1.5 available. The dependency (jar file) will be automaticaly 
			added to the resulting OSGi bundle <dependency> <groupId>net.sourceforge.saxon</groupId> 
			<artifactId>saxonhe</artifactId> <version>9.2.1.5</version> <type>jar</type> 
			</dependency> -->

		<!-- Alternatively, if you would like to refer to local dependency on the 
			file system, use following code to import local dependency from sample project 
